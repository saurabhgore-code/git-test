pipeline {
     environment {
    registry = 'saurabhgore65/saurabh-website-image'
    registryCredential = 'sagoredockerid'
    dockerImage = ''
}
agent any
 stages  
    { 
    stage('Building Image') {
         steps{
            script{
             dockerImage = docker.build registry + ":$BUILD_NUMBER"
             }
         }
        }
     stage('Compile'){
        steps{
        'sh docker images'
        }
      }  
 }
 stage('Deploy Image') {
          steps{
             script{
                 docker.withRegistry( '', registryCredential ) {
               dockerImage.push()  
                }
            }
      }
   
   }
}
