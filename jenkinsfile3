pipeline {

    agent {
            docker {
                image 'wordpress'
            }


    }
    stages {
    stage('Create a container'){
              steps{
               sh docker run -dit --name ramu-container wordpress
               }
          }     
             stage('enter inside a container'){
             steps{
        sh docker exec -ti ramu-container /bin/bash
        }
      }    
             stage('create a directory'){
                  steps{
                  mkdir saurabh
                  }
           }       
             stage('enter inside the directory'){
                  steps{
                  cd saurabh
                  }
                }  
              stage('create a file'){
                 steps{
                sh 'touch sami.txt'
                }
            }

            }

        }
