pipeline {
agent {
            docker {
                image 'wordpress'
            }
}
    
    stages {
        stage('compile'){
              steps{
               sh 'docker run -it --name ramu-container wordpress'
               sh 'docker exec -ti ramu-container /bin/bash'
               sh 'mkdir saurabh'
               sh 'touch saurabh/myfile.txt'
               sh 'pwd'
               }
            }
     
        }
        }
      
