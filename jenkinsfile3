pipeline {
environment {
    dockerImage = 'wordpress'
}
agent any
    
    stages {
        stage('compile'){
              steps{
               sh 'docker run -dit  -p 8081:8080 --name ramu-container wordpress'
               sh 'docker exec -ti ramu-container /bin/bash'
               sh 'mkdir saurabh'
               sh 'touch saurabh/myfile.txt'
               sh 'pwd'
               }
            }
     
        }
        }
      
